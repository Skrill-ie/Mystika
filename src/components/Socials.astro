---
const socialFacebook = "https://www.facebook.com/CafeMystika";
const socialInstagram = "https://www.instagram.com/CafeMystika";
const socialYoutube = "https://www.youtube.com/c/ThePinoyDrinker"; // Update as needed
---

<div
        x-data="{
    open: false,
    animate: false,
    interval: null,
    startShake() {
      this.interval = setInterval(() => {
        if (!this.open) {
          this.animate = true;
          setTimeout(() => this.animate = false, 600);
        }
      }, 2500);
    },
    stopShake() {
      clearInterval(this.interval);
    },
    toggle() {
      this.open = !this.open;
      if (this.open) {
        this.stopShake();
      } else {
        this.startShake();
      }
    },
    init() {
      this.startShake();
    }
  }"
        x-init="init()"
        class="fixed bottom-5 right-5 z-50"
>

    <!-- Social Buttons -->
    <div
            x-show="open"
            x-transition:enter="transition ease-out duration-300"
            x-transition:enter-start="opacity-0 translate-y-4"
            x-transition:enter-end="opacity-100 translate-y-0"
            x-transition:leave="transition ease-in duration-200"
            x-transition:leave-start="opacity-100 translate-y-0"
            x-transition:leave-end="opacity-0 translate-y-4"
            class="absolute bottom-18 right-0 p-4 space-y-2"
    >
        <a
                href={socialFacebook}
                target="_blank"
                class="bg-blue-600 text-white p-3 rounded-full shadow-lg hover:bg-blue-700 transition block"
                aria-label="Facebook"
        >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M22 12a10 10 0 1 0-11.5 9.87v-7h-2v-3h2v-2.3c0-2 1.2-3.1 3-3.1.9 0 1.8.16 1.8.16v2h-1c-1 0-1.3.62-1.3 1.26V12h2.3l-.37 3h-2v7A10 10 0 0 0 22 12z"/>
            </svg>
        </a>

        <a
                href={socialInstagram}
                target="_blank"
                class="bg-pink-500 text-white p-3 rounded-full shadow-lg hover:bg-pink-600 transition block"
                aria-label="Instagram"
        >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M7 2C4.24 2 2 4.24 2 7v10c0 2.76 2.24 5 5 5h10c2.76 0 5-2.24 5-5V7c0-2.76-2.24-5-5-5H7zm10 2c1.65 0 3 1.35 3 3v10c0 1.65-1.35 3-3 3H7c-1.65 0-3-1.35-3-3V7c0-1.65 1.35-3 3-3h10zm-5 3a5 5 0 1 0 .001 10.001A5 5 0 0 0 12 7zm0 2a3 3 0 1 1 0 6 3 3 0 0 1 0-6zm4.5-.5a1.5 1.5 0 1 1-3.001.001A1.5 1.5 0 0 1 16.5 8.5z"/>
            </svg>
        </a>

        <a
                href={socialYoutube}
                target="_blank"
                class="bg-red-600 text-white p-3 rounded-full shadow-lg hover:bg-red-700 transition block"
                aria-label="YouTube"
        >
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="currentColor"  viewBox="0 0 576 512"><path d="M549.7 124.1c-6.3-23.7-24.8-42.3-48.3-48.6C458.8 64 288 64 288 64S117.2 64 74.6 75.5c-23.5 6.3-42 24.9-48.3 48.6-11.4 42.9-11.4 132.3-11.4 132.3s0 89.4 11.4 132.3c6.3 23.7 24.8 41.5 48.3 47.8C117.2 448 288 448 288 448s170.8 0 213.4-11.5c23.5-6.3 42-24.2 48.3-47.8 11.4-42.9 11.4-132.3 11.4-132.3s0-89.4-11.4-132.3zm-317.5 213.5V175.2l142.7 81.2-142.7 81.2z"/></svg>
        </a>
    </div>
    <!-- Tooltip -->
    <div
            x-show="showTooltip"
            x-transition
            class="absolute bottom-16 right-0 mb-2 bg-black text-white text-xs px-3 py-1 rounded shadow-md"
    >
        Follow me on
    </div>
    <!-- Toggle Button (Appears Below when open) -->
    <button
            @click="toggle()"
            :class="animate ? 'shake-once' : ''"
            class="bg-black text-white rounded-full shadow-lg hover:bg-gray-800 transition transform active:scale-95 w-18 h-18 overflow-hidden"
            aria-label="Toggle Socials"
    >
        <img x-show="!open" src="/images/angelo.jpg">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 m-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path x-show="open" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
    </button>

</div>
