<div>
    <form id="submitForm">
        <input type="text" name="name" placeholder="Your Name" required>
        <input type="email" name="email" placeholder="Your Email" required>
        <input type="text" name="contact" placeholder="Contact Number" required>
        <input type="text" name="receipt" placeholder="Receipt Link" required>
        <button type="submit">Submit</button>
    </form>
</div>
<script type="module" is:inline>
    const sheetUrl = 'https://script.google.com/macros/s/AKfycby7tkvZx0717JGZVT6Ni_Eq6I3E3ACYgH_k2k79Ru86upvM5rd2-FTdRhA-Y6ISgTEq/exec';

    document.getElementById('submitForm').addEventListener('submit', async function (e) {
        e.preventDefault();

        const form = e.target;
        const data = {
            name: form.name.value,
            email: form.email.value,
            contact: form.contact.value,
            receipt: form.receipt.value
        };

        const response = await fetch(sheetUrl, {
            method: "POST",
            body: JSON.stringify(data),
            headers: {
                "Content-Type": "text/plain;charset=utf-8",
            }
        });

        const result = await response.json();
        if (result.status === "success") {
            alert("Thanks! We got your info.");
            form.reset();
        } else {
            alert("Failed to submit. Please try again.");
        }
    });
</script>