---
import BaseLayout from '../layouts/Layout.astro';
import HeroSection from "../components/Herosection.astro";

    const socialFacebook = "https://www.facebook.com/CafeMystika";
    const socialInstagram = "https://www.instagram.com/cafemystika/";
    const socialYoutube=  "https://www.youtube.com/c/ThePinoyDrinker";
---
<BaseLayout title="Contact Us">
    <section class="py-20 container mx-auto px-3 md:px-10">
            <p class="text-5xl mb-10 font-radley text-text-title text-center">Have a Word <br> with Us</p>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-10 md:gap-20">
                <div x-data="{ shown: false }" x-intersect.treshold.25="shown = true" class="transition-all duration-700 ease-out"
                     :class="shown ? 'translate-y-0 opacity-100' : 'translate-y-5 opacity-0'">
                    <div x-show="shown" x-transition class="bg-black-primary w-full xl:w-3/4 mx-auto h-52 py-10 px-5 md:px-0 font-radley">
                        <p class="text-text-divider text-3xl mb-5 text-center"> Customer Service</p>
                        <div class="flex justify-center mx-auto mb-5 text-text-paragraph font-imFell">
                            <img src="/icons/Vector-2.png"><span class="ml-5">business@cafemystika.com</span>
                        </div>
                        <div class="flex justify-center mx-auto text-text-paragraph font-imFell">
                            <img src="/icons/Vector-3.png"><span class="ml-5">0905-000-000</span>
                        </div>
                    </div>
                </div>
                <div x-data="{ shown: false }" x-intersect.treshold.45="shown = true" class="transition-all duration-1400 ease-out"
                     :class="shown ? 'translate-y-0 opacity-100' : 'translate-y-5 opacity-0'">
                    <div x-show="shown" x-transition class="bg-black-primary w-full xl:w-3/4 mx-auto h-52 py-10 px-5 md:px-0 font-radley">
                        <p class="text-text-divider text-3xl mb-5 text-center">Wholesale</p>
                        <div class="flex justify-center mx-auto mb-5 text-text-paragraph font-imFell"><img src="/icons/Vector-2.png"><span class="ml-5">help@mystika.com</span></div>
                        <div class="flex justify-center mx-auto text-text-paragraph font-imFell"><img src="/icons/Vector-3.png"><span class="ml-5">0905-000-000</span></div>
                    </div>
                </div>
            </div>
        </section>
    <section class="md:pb-20 container mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-5 lg:gap-20">
            <div class="w-full xl:w-3/4 mx-auto py-10 px-3 lg:px-10 xl:px-0 font-radley order-2 lg:order-1">
                <div x-data="{ shown: false }" x-intersect.treshold.45="shown = true" class="transition-all duration-1400 ease-out"
                     :class="shown ? 'translate-y-0 opacity-100' : 'translate-y-5 opacity-0'">
                    <div  x-show="shown" x-transition class="mb-10 lg:text-center text-start">
                        <p class="text-5xl mb-10 font-radley text-text-title">Get cozy and Follow our Socials!</p>
                        <p class="w-full lg:mx-auto text-text-paragraph opacity-65">Join up with the Cafe Mystika Socials â€” get the latest news, special deals, and secret coffee notes brewed just for you!</p>
                    </div>
                </div>
                <div class="flex gap-10 justify-center">
                    <div>
                        <a
                                href={socialFacebook}
                                target="_blank"
                                class="bg-blue-600 text-white p-3 rounded-full shadow-lg hover:bg-blue-700 transition block"
                                aria-label="Facebook"
                        >
                            <svg class="w-15 h-15" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M22 12a10 10 0 1 0-11.5 9.87v-7h-2v-3h2v-2.3c0-2 1.2-3.1 3-3.1.9 0 1.8.16 1.8.16v2h-1c-1 0-1.3.62-1.3 1.26V12h2.3l-.37 3h-2v7A10 10 0 0 0 22 12z"/>
                            </svg>
                        </a>
                    </div>
                    <div>
                        <a
                                href={socialInstagram}
                                target="_blank"
                                class="bg-pink-500 text-white p-3 rounded-full shadow-lg hover:bg-pink-600 transition block"
                                aria-label="Instagram"
                        >
                            <svg class="w-15 h-15" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M7 2C4.24 2 2 4.24 2 7v10c0 2.76 2.24 5 5 5h10c2.76 0 5-2.24 5-5V7c0-2.76-2.24-5-5-5H7zm10 2c1.65 0 3 1.35 3 3v10c0 1.65-1.35 3-3 3H7c-1.65 0-3-1.35-3-3V7c0-1.65 1.35-3 3-3h10zm-5 3a5 5 0 1 0 .001 10.001A5 5 0 0 0 12 7zm0 2a3 3 0 1 1 0 6 3 3 0 0 1 0-6zm4.5-.5a1.5 1.5 0 1 1-3.001.001A1.5 1.5 0 0 1 16.5 8.5z"/>
                            </svg>
                        </a>
                    </div>
                    <div>
                        <a
                                href={socialYoutube}
                                target="_blank"
                                class="bg-red-600 text-white p-3 rounded-full shadow-lg hover:bg-red-700 transition block"
                                aria-label="YouTube"
                        >
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-15 h-15" fill="currentColor"  viewBox="0 0 576 512"><path d="M549.7 124.1c-6.3-23.7-24.8-42.3-48.3-48.6C458.8 64 288 64 288 64S117.2 64 74.6 75.5c-23.5 6.3-42 24.9-48.3 48.6-11.4 42.9-11.4 132.3-11.4 132.3s0 89.4 11.4 132.3c6.3 23.7 24.8 41.5 48.3 47.8C117.2 448 288 448 288 448s170.8 0 213.4-11.5c23.5-6.3 42-24.2 48.3-47.8 11.4-42.9 11.4-132.3 11.4-132.3s0-89.4-11.4-132.3zm-317.5 213.5V175.2l142.7 81.2-142.7 81.2z"/></svg>
                        </a>
                    </div>
                </div>
            </div>
            <div class="w-full xl:w-3/4 mx-auto py-0 md:py-10 font-radley order-1 lg:order-2">
                <div class="flex xl:justify-center h-full">
                    <iframe
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d705.7907064776172!2d123.2466837592959!3d9.281037125473096!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x33ab6700254fb5cd%3A0x102c972ead890ff6!2sCafe%20Mystika%20Valencia%20Espresso%20Bar!5e0!3m2!1sen!2ssg!4v1730140450245!5m2!1sen!2ssg"
                            style="border:0;"
                            allowfullscreen=""
                            loading="lazy"
                            class="w-full xl:w-96 h-full"
                            referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                </div>
            </div>
        </div>
    </section>
</BaseLayout>
