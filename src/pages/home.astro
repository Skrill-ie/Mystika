<section class="bg-zinc-950 justify-items-center">
    <div class="flex flex-col lg:flex-row font-radley w-full m-auto items-center max-w-screen-xl lg:py-20">
        <div class="order-2 md:order-1 px-3 lg:px-10 py-10 lg:py-0 mx-auto text-left lg:mr-16">
            <div class="text-4xl md:text-5xl text-amber-500">Simply Cozy Sips</div>
            <div class="text-sm  text-amber-500 py-10 border-amber-500 border-b">Lorem ipsum odor amet, consectetuer adipiscing elit. Interdum neque ultricies sem eros id?</div>
            <div class="row-span-2 pt-10">
                <ul>
                    {menu.map((item)=>(
                            <li class="pb-5 md:pb-7">
                                <div class="flex mb-3">
                                    <div class="text-left text-sm text-amber-500 md:w-48 font-bold"> { item.coffeeName }</div>
                                    <div class="border-dotted border-[#FDECD8] border-b-[2px] xl:border-b-[2px] w-full h-5 xl:h-4 mx-5 opacity-55"></div>
                                    <div class="text-right text-sm text-amber-500"> { item.coffeePrice }<sup>.00</sup></div>
                                </div>
                                <div class="text-text-paragraph opacity-55">{item.description}</div>
                            </li>
                    ))}

                </ul>
            </div>
        </div>
        <div class="order-1 md:order-2 m-auto hidden lg:block">
            <img class="w-full" src="./src/assets/images/landing/sec5image.png">
        </div>
    </div>
</section>
<section class="bg-zinc-900 justify-items-center py-10 lg:py-20 text-center"><!--Sixth Section-->
